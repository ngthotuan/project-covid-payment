<div id="page-content">
    <div class="row">
        <div class="col-lg-4">
            <div class="block">
                <div class="block-title">
                    <h2><i class="fa fa-user"></i> Thông tin <strong>bệnh nhân</strong></h2>
                </div>
                <div class="block-section text-center">
                    <h3>
                        <strong><%= patientFind.name %></strong><br><small></small>
                    </h3>
                </div>
                <table class="table table-borderless table-striped table-vcenter">
                    <tbody>

                    <tr>
                        <td class="text-right" style="width: 50%;"><strong>CMND/CCCD</strong></td>
                        <td><%= patientFind.identity %></td>
                    </tr>
                    <tr>
                        <td class="text-right"><strong>Ngày sinh</strong></td>
                        <td><%= moment(patientFind.dob).tz('Asia/Ho_Chi_Minh').format('DD-MM-YYYY') %></td>
                    </tr>
                    <tr>
                        <td class="text-right"><strong>Trạng thái</strong></td>
                        <% if(patientFind.status !== null){ %>
                            <td><strong>F<%= patientFind.status %></strong></td>
                        <% } else { %>
                            <td><strong></strong></td>
                        <% } %>
                    </tr>
                    <tr>
                        <td class="text-right"><strong>Tài khoản cho phép</strong></td>
                        <td><%= patientFind.credit %></td>
                    </tr>
                    <tr>
                        <td class="text-right"><strong>Khoản nợ</strong></td>
                        <td><%= patientFind.debt %></td>
                    </tr>
                    <tr>
                        <td class="text-right"><strong>Trả khoản nhỏ nhất</strong></td>
                        <td><%= patientFind.payment_min %></td>
                    </tr>
                    </tbody>
                </table>
            </div>

        </div>
        <div class="col-lg-8">
            <%- include('detail-related', { patients: patientFind.patients }); %>
            <%- include('detail-parent', { patient: patientFind.parent }); %>
            <%- include('detail-status-history', { status_histories: patientFind.status_histories }); %>
            <%- include('detail-payment-history', { transaction_histories: patientFind.transaction_histories }); %>
            <%- include('detail-hospital-history', { hospital_histories: patientFind.hospital_histories }); %>
            <%- include('detail-account-history', { account_histories: patientFind.accounts[0]?.account_histories }); %>
        </div>
    </div>
</div>
<!-- Load and execute javascript code used only in this page -->
<script src="/js/patients/patient-detail.js"></script>