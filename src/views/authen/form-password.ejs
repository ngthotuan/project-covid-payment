<!-- Login Background -->
<img
  src="/img/placeholders/backgrounds/login_full_bg.jpg"
  alt="Login Full Background"
  class="full-bg animation-pulseSlow"
/>
<!-- END Login Background -->

<!-- Login Container -->
<div id="login-container" class="animation-fadeIn">
  <!-- Login Title -->
  <div class="login-title text-center">
    <h1>
      <i class="gi gi-flash"></i> <strong>Project Covid Payment</strong
      ><br /><small><strong>Đăng nhập</strong> <strong></strong></small>
    </h1>
  </div>
  <!-- END Login Title -->

  <!-- Login Block -->
  <div class="block push-bit">
    <%- include('../partials/messages') %>
    <!-- Reminder Form -->
    <form
      action="/login/password"
      method="post"
      id="form-password"
      class="form-horizontal form-bordered form-control-borderlesse"
    >
      <input
        type="hidden"
        name="username"
        value="<%= typeof username !== 'undefined' ? username : '' %>"
      />
      <div class="form-group">
        <div class="col-xs-12">
          <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-user"></i></span>
            <input
              autofocus="autofocus"
              type="password"
              id="password"
              name="password"
              class="form-control input-lg"
              value="<%= typeof password !== 'undefined' ? password : '' %>"
              placeholder="password"
              required
            />
          </div>
        </div>
      </div>
      <div class="form-group form-actions">
        <div
          class="col-xs-12"
          style="
            display: flex;
            justify-content: space-between;
            align-items: center;
          "
        >
          <a href="/login"
            > Đăng nhập với tài khoản khác</a
          >
          <button type="submit" class="btn btn-sm btn-primary">
            <i class="fa fa-angle-right"></i> Đăng nhập
          </button>
        </div>
      </div>
      <!--                                     <div class="form-group"> -->
      <!--                                         <div class="col-xs-12 text-center"> -->
      <!--                                             <small>Did you remember your password?</small> <a href="javascript:void(0)" id="link-reminder"><small>Login</small></a> -->
      <!--                                         </div> -->
      <!--                                     </div> -->
    </form>
    <!-- END Reminder Form -->
  </div>
  <!-- END Login Block -->
</div>
<!-- END Login Container -->

<!-- Load and execute javascript code used only in this page -->
<script src="/js/pages/login.js"></script>
<script src="/js/accounts/login-password.js"></script>
<script>
  $(function () {
    Login.init();
  });
</script>
