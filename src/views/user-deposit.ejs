<link rel="stylesheet" href="/css/products/product-form.css" />
<!-- Page content -->
<div id="page-content">
  <!-- Product Edit Content -->
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <!-- General Data Block -->
      <div class="block">
        <!-- General Data Title -->
        <div class="block-title">
          <h2>
            <i class="fa fa-pencil"></i> <strong>Thông tin nạp tiền</strong>
          </h2>
        </div>
        <!-- END General Data Title -->

        <!-- General Data Content -->
        <form method="post" class="form-horizontal form-bordered">
          <div class="form-group">
            <label class="col-md-3 control-label" for="name"
              >Tài khoản nhận tiền</label
            >
            <div class="col-md-9">
              <input
                type="text"
                disabled
                id="name"
                name="username"
                class="form-control"
                value="<%= user?.username%>"
                required
              />
            </div>
          </div>
          <div class="form-group">
            <label class="col-md-3 control-label" for="price"
              >Số tiền còn lại trong tài khoản</label
            >
            <div class="col-md-9">
              <div class="input-group">
                <div class="input-group-addon">đ</div>
                <input
                  type="text"
                  id="price"
                  class="form-control"
                  value="<%= user?.balance%>"
                  required
                  placeholder="0,00"
                  disabled
                />
              </div>
            </div>
          </div>
          <div class="form-group">
            <label class="col-md-3 control-label" for="price"
              >Số tiền nạp vào</label
            >
            <div class="col-md-9">
              <div class="input-group">
                <div class="input-group-addon">đ</div>
                <input
                  type="text"
                  id="price"
                  name="amount"
                  class="form-control"
                  required
                  placeholder="0,00"
                />
              </div>
            </div>
          </div>

          <div class="form-group form-actions">
            <div class="col-md-6 col-md-offset-6">
              <button type="submit" class="btn btn-primary">
                <i class="fa fa-floppy-o"></i> Xác nhận nạp tiền
              </button>
              <button type="reset" class="btn btn-danger">
                <i class="fa fa-floppy"></i> Xóa bỏ toàn bộ
              </button>
            </div>
          </div>
        </form>
        <!-- END General Data Content -->
      </div>
      <!-- END General Data Block -->
    </div>
  </div>
  <!-- END Product Edit Content -->
</div>
<!-- END Page Content -->
